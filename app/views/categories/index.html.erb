<h1>Category List</h1>

<table>

  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category_path(category) %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Delete', category_path(category), method: :delete, confirm: 'Are you sure you want to delete this category?' %></td>
    <% end %>
  </tbody>
  
</table>
<br>
<%= link_to 'New Category', new_category_path %>
